<br><br>
<div class="container" id="profile_info">
  <div class="col-md-12 text-center">

    <div>
    <%= image_tag @user.avatar.url(:medium) %>
     	<h2 class="title"><%= @user.first_name %> <%= @user.last_name %></h2>
    </div>
    <div>
      <% if current_user %>
        <p><%= mail_to @user.email, "Email me", subject: "Someone from Sharetastic wants to connect with you!" %></p>
      <% end %>
      <p><span class="context-text">current city - </span> <span class="accent-text"><%= @user.current_city %></span></p>
      <p><span class="context-text">About me</span><br>
      <div class= 'well well-sm' id="bio"><%= @user.bio %></div></p>
    </div>
    <% if current_user == @user %>
      <div class="btn-group">
        <div class = "button text-center">
          <%= link_to "edit profile", edit_user_path(@user.id), class: 'btn btn-light center-block' %>
        </div>
        <div class = "button text-center">
          <%= button_to "remove profile", @user, method: :delete, data: {confirm: "Are you sure you want to delete your profile?"}, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %> 
    <hr>
  </div>

    <div class="col-md-12 text-center">
      <h2> Skills </h2>
      <br>

  
      
        <% if current_user == @user %>
          <div class = "button text-center">
            <%= button_to "add skill", display_skills_path, method: :get, class: 'btn btn-light center-block' %>
            <br>
          </div>
        <% end %> 

      <div class="btn-group text-center">
        <% @user.skills.each do |skill| %>
          <div class="col-md-4 text-center">
          <%= skill.name %>
          <% skill.user_skills.each do |target| %>
            <% if current_user == @user %>
              <% if target.user_id == @user.id %>
                <%= button_to "delete", user_skills_path(target.id), method: :delete, data: {confirm: "Are you sure you want to delete this skill?"}, class: "btn btn-primary" %>
              <% end %>
            <% end %>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>

</div>


