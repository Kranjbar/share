<!DOCTYPE html>
<html>
<head>
  <title>Share</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container" id="center-content">
<br>
	<nav class="navbar navbar-default navbar-fixed-top">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- <div>
        <img class="navbar-brand-icon" src = "/assets/navbar-brand-icon.png">
      </div> -->
      <a class="navbar-brand" href="/">Sharetastic</a>
    </div>
    <div class="collapse navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About Us", about_path %></li>
        <li><%= link_to "All Categories", categories_path %></li>
        <% if current_user %>
            <li><%= link_to "Profile", user_path(current_user) %></li>
            <li><%= link_to "Log Out", destroy_session_path %></li>
        <% else %>
            <li><%= link_to "Signup", new_user_path %></li>
            <li><%= link_to "Log In", new_session_path %></li>
        <% end %>     
      </ul>
    </div><!-- /.navbar-collapse -->
	</nav>
</div>
<br>
    <div>
      <% flash.each do |name, msg| %>
        <div id="flash_messages">
        <br>
          <div class="alert alert-info" role="alert">
            <%= msg %>
          </div>
        </div>
      <% end %>
    </div>

<%= yield %>

</body>



</html>
