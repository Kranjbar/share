<div>
  <h2 class="title text-center">Categories</h2>
  <br>
  <div class="container">
	  <% @categories.each do |category| %>
			<div class="col-sm-4 text-center">
				<h3><%=link_to "#{category.name}", category_path(category.slug), class: "accent-text"%></h3>
			</div>
	  <% end %>
	 </div>
</div>